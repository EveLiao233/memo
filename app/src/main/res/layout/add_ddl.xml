<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@mipmap/bkg_ddl">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常规设置"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@color/shadow"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="选择事项"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:layout_marginLeft="15dp"
                android:gravity="left|center" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入事件名称"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:id="@+id/thing_ddl"
                android:gravity="center"
                android:layout_weight="1"
                android:editable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="选择StartTime"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:layout_marginLeft="15dp"
                android:gravity="left|center" />
            <Button
                android:id="@+id/pick_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择开始日期"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="选择EndTime"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:layout_marginLeft="15dp"
                android:gravity="left|center" />
            <Button
                android:id="@+id/pick_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择结束日期"
                android:background="@drawable/shape"
                style="@style/my_button"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/shadow"
        android:id="@+id/chooseIcon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图标"
            android:id="@+id/textView9"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/hideIcon"
            android:src="@mipmap/triangle_right"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/icon_view"
        android:layout_weight="1"
        android:background="@color/shadow"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/img1"
                        android:layout_column="0"
                        android:clickable="true"
                        android:src="@mipmap/pokemon1"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/img2"
                        android:clickable="true"
                        android:layout_column="1"
                        android:src="@mipmap/pokemon2"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
